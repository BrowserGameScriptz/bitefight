{
    "name": "osein/bitefight",
    "description": "Clone version of popular game Bitefight",
    "type": "project",
    "authors": [
        {
            "name": "Osein",
            "email": "huseyin.gucuyener@gmail.com"
        }
    ],
    "require": {
        "j4mie/idiorm": "^1.5"
    },
    "require-dev": {
        "techpivot/phalcon-ci-installer": "~1.0",
        "squizlabs/php_codesniffer": "^2.8",
        "phpunit/phpunit": "*",
        "facebook/webdriver": "dev-master",
        "scriptfusion/phpunit-immediate-exception-printer": "^1"
    },
    "autoload": {
        "classmap": ["./controllers/", "./models/"],
        "psr-4": {
            "Bitefight\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "run-tests": [
            "phpcs",
            "nohup php -S localhost:8000 -t public/ > phpd.log 2>&1 &",
            "vendor/bin/phpunit -c phpunit.xml tests --coverage-html coverage"
        ]
    }
}
